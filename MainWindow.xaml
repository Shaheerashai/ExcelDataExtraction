        <Label Content="Select Input File" HorizontalAlignment="Left" Margin="120,129,0,0" VerticalAlignment="Top" FontSize="14"/>
        <Label Content="EXCEL DATA EXTRACTION" HorizontalAlignment="Left" Margin="132,50,0,0" VerticalAlignment="Top" FontSize="30" FontWeight="Bold"/>

    </Grid>
</Window>
