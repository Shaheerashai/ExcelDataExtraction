        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExcelDataExtraction"
        mc:Ignorable="d"
        Title="Excel Extraction" Height="391" Width="638">
    <Grid HorizontalAlignment="Left" Width="628" Height="361" VerticalAlignment="Top" Background="#FFF1EDED">
